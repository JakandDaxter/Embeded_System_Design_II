library ieee;
use ieee.std_logic_1164.all;

entity tb_Top is
end tb_Top;

architecture top_beh of tb_Top is
 
 ------Components-----
  
    component Top is
        port (

          ---- PWM Output ----
 
          PWM : out std_logic;

          ----- CLOCK -----
	 
          CLOCK : in std_logic;
      
          ----- ENABLE -----
	 
          en : in std_logic;
      
          ----- RESET -----
	 
          reset : in std_logic;


          ----- PERIOD -----
          PERIOD : in std_logic_vector(25 downto 0); 
      
	  
          ----- DUTY -----
          DUTY : in std_logic_vector(25 downto 0) 
	    
      	 );
    end component;
    
---------------------------------  

-----Signals-----
constant timers         :time := 20 ns;

signal clk              :std_logic :='0';
signal resetp           :std_logic :='1'; 

signal enable           :std_logic :='0';
signal tbperiod         :std_logic_vector(25 downto 0) := "000000000010000000000000000"; --50khs
signal tbduty           :std_logic_vector(25 downto 0) := "000000000001000000000000000"; --50% DUTY

signal pwm_sig          : std_logic;

-- End of signals

begin

-- Unit under test
uut: Top
  port map (
            CLOCK       => clk,
            reset       => resetp,
            en          => enable,
            PERIOD      => tbperiod,
            DUTY        => tbduty,
            PWM         => pwm_sig
            );

-- Clock process
process
begin
  clk <= not clk;
  wait for timers/2;
end process;

-- Main test process
main: process
begin
  report "****************** TB Start ****************" severity note;
  resetp <= '0';
  wait for 1 ms;
  enable <= '1';
------------------------------------------------------------  
  report "Variable duty cycle at 50Mhz test" severity note;
  report "50% DC" severity note;
  wait for 5 ms;
------------------------------------------------------------  
  report "10% DC" severity note;
  tbduty <= "00000000000001100110011001";
  wait for 5 ms;
  
  report "25% DC" severity note;
  tbduty <= "00000000000100000000000000";
  wait for 5 ms;
  
  report "50% DC" severity note;
  tbduty <= "00000000001000000000000000";
  wait for 5 ms;
  
  report "75% DC" severity note;
  tbduty <= "00000000001100000000000000";
  wait for 5 ms;
  
report "DUTY > period" severity note;
  report "125% DC" severity note;
  tbduty <= "00000000010100000000000000";
  wait for 5 ms;
  
  wait for 1 ms;
  report "50 khz  Test of different frewuency" severity note;
  resetp <= '0';
  tbduty <= "00000000001000000000000000";
  
   report "15 khz period" severity note;
   tbperiod <= "00000000000011101010011000";
   wait for 5 ms;
  
   report "25 khz period" severity note;
   tbperiod <= "00000000000110000110101000";
   wait for 5 ms;
  
   report "45 khz period" severity note;
   tbperiod <= "00000000001010111111001000";
   wait for 5 ms;
  

  report "****************** TB Finish ****************" severity note;
  wait;
end process; 
    
end top_beh;